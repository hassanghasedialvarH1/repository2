<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".hsn">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/act_hsn_recycler"
        android:layout_width="251dp"
        android:layout_height="468dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shap_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/act_hsn_editTextPhone"
        android:layout_width="77dp"
        android:layout_height="48dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_hsn_recycler"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/act_hsn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="18dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_hsn_editTextPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>